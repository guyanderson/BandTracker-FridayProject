@{
  Layout="Shared/_Layout.cshtml";
}

<br>
<br>
<h2>Bands:</h2>
@if (@Model.Count == 0)
{
  <p>There are no bands to display!</p>
}

<ul>
  @foreach (var band in Model)
  {
    <li><a href='/bands/@band.GetId()'>@band.GetName()</a></li>
  }
</ul>

